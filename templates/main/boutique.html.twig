{% extends 'base.html.twig' %}

{% block title %}Boutique!{% endblock %}

{% block body %}

<style>
.card img{
    border-radius: 40px;
}
</style>

<h1>Bienvenue sur la boutique</h1>

	
	<div class="allcard">

	

		{% if produits %}
		
			{% for pro in produits %} 
			  
				<div class="card">
					<h1>{{pro.title}}</h1>
					<img src={{ pro.image }}>
					<p>{{pro.description}}</p>
					<p>{{pro.price}} &euro;</p>

					<button class="btn" href="#">Ajouter</button>
				</div>	
			
			{% endfor %}
		
		{% else %}

		<h4>Il n'y a aucun produit pour le moment</h4>

		{% endif %}

	</div>
	
{% endblock %}